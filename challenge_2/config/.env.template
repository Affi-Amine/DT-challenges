# Environment Variables Template for Challenge 2: Simple Cron Job
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# =============================================================================
# NOTIFICATION CREDENTIALS
# =============================================================================

# Pushover Configuration
# Get these from https://pushover.net/
PUSHOVER_API_TOKEN=your_pushover_api_token_here
PUSHOVER_USER_KEY=your_pushover_user_key_here

# Email Configuration
# Use app-specific passwords for Gmail
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password_here
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=recipient@example.com

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Secret key for encryption (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_secret_key_here

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Custom timezone (defaults to UTC)
# TIMEZONE=America/New_York

# Custom execution count (overrides config.yaml)
# EXECUTIONS_PER_DAY=10

# Custom time window
# SCHEDULE_START_TIME=06:00
# SCHEDULE_END_TIME=22:00

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode (true/false)
DEBUG=true

# Mock notifications in development (true/false)
MOCK_NOTIFICATIONS=true

# =============================================================================
# MONITORING AND ALERTING
# =============================================================================

# Slack webhook URL (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Discord webhook URL (optional)
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# API endpoints for health checks (optional)
# HEALTH_CHECK_URL=https://your-monitoring-service.com/ping

# Database connection string (if needed for future features)
# DATABASE_URL=sqlite:///cron_job.db

# =============================================================================
# SYSTEM PATHS
# =============================================================================

# Custom paths (optional - defaults are set in config.yaml)
# CUSTOM_LOG_DIR=/var/log/cron_job
# CUSTOM_SCRIPT_DIR=/opt/cron_job/scripts
# CUSTOM_CONFIG_DIR=/etc/cron_job