# Application Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/diplomtools
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=8192
OPENAI_TIMEOUT=30
OPENAI_MAX_RETRIES=3

# Gemini Configuration (fallback)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=models/embedding-001

# Local Embedding Configuration
LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Document Processing Configuration
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_FILE_TYPES=.md,.txt,.pdf,.docx
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNKS_PER_DOCUMENT=1000

# Search Configuration
MAX_SEARCH_RESULTS=50
SEMANTIC_SEARCH_WEIGHT=0.7
KEYWORD_SEARCH_WEIGHT=0.3
MIN_SIMILARITY_THRESHOLD=0.3

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=300
BATCH_SIZE=10
MAX_WORKERS=4

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_METHODS=GET,POST,PUT,DELETE
CORS_HEADERS=*

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Security Configuration (for production)
# JWT_SECRET_KEY=your_jwt_secret_key_here
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION_HOURS=24

# Production Database (uncomment for production)
# DATABASE_URL=postgresql://username:password@host:port/database

# Production Redis (uncomment for production)
# REDIS_URL=redis://username:password@host:port/db

# SSL Configuration (for production)
# SSL_KEYFILE=/path/to/keyfile
# SSL_CERTFILE=/path/to/certfile